{
	"compilerOptions": {
		"target": "es6",
		"lib": ["es6", "dom"],
		"strict": true,
		"typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
		"outDir": "./dist",
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules"]
}

